{
  "name": "JIDE PHP Apache Workspace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/var/www/html",
  "forwardPorts": [80, 5500],
  "postCreateCommand": "service apache2 start",
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "xdebug.php-pack",
        "zhuangtongfa.material-theme",        // One Dark Pro theme
        "vscode-icons-team.vscode-icons",     // vscode-icons
        "ritwickdey.live-sass",               // Live Sass Compiler
        "christian-kohler.path-intellisense", // Path Intellisense
        "github.vscode-pull-request-github",  // GitHub Extension
        "yandeu.five-server"                  // Five Server (PHP Live Server)
      ],
      "settings": {
        "php.validate.executablePath": "/usr/bin/php",
        "php.debug.executablePath": "/usr/bin/php",
        "workbench.colorTheme": "One Dark Pro",
        "editor.cursorBlinking": "smooth",
        "editor.cursorSmoothCaretAnimation": "on",
        "editor.mouseWheelZoom": true,
        "window.menuBarVisibility": "toggle",
        "workbench.sideBar.location": "right",
        "fiveServer.php.executable": "/usr/bin/php",
        "editor.smoothScrolling": true
      }
    }
  }
}